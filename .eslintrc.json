{
  "env": {
    "es6": true,
    "node": true
  },
  "extends": [
    "@codeyourfuture/standard"
  ],
  "overrides": [
    {
      "files": [
        "setupTests.js",
        "**/*.test.js"
      ],
      "extends": [
        "plugin:jest/recommended"
      ],
      "rules": {
        "jest/expect-expect": [
          "error",
          {
            "assertFunctionNames": [
              "cy.**.should",
              "cy.checkA11y",
              "expect",
              "request.**.expect"
            ]
          }
        ]
      }
    }
  ],
  "parser": "babel-eslint"
}
